<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhiteTheme" parent="AboutLibrariesTheme.Light">
        <item name="colorPrimary">@color/colorPrimaryBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ImageViewerTheme" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlayDark" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="android:background">@color/colorPrimaryBackground</item>
    </style>

    <style name="TabWidgetZone">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/tab_indicator_text</item>
    </style>

    <style name="TabWidgetSector" parent="TabWidgetZone">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TransparentStatusBar" parent="AppTheme.NoActionBar">
    </style>

    <style name="Theme.IssueReporter.Custom" parent="AppTheme.NoActionBar">
        <item name="cardBackgroundColor">@color/colorPrimaryBackground</item>
        <item name="colorButtonNormal">?colorAccent</item>
        <item name="android:textColorPrimary">@color/text</item>
    </style>


</resources>
